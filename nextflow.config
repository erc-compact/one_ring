//Database plug 

plugins {
    id 'nf-sqldb'
}


sql {
    db {
        compact {
            url = 'jdbc:mysql://localhost:3306/compact?serverTimezone=UTC'
            user = secrets.DB_USER
            password = secrets.DB_PASSWORD
        }
    }
}

// tower {
//     accessToken = secrets.TOWER_ACCESS_TOKEN
//     enabled = true
// }


//Pipeline defaults
params {

//Observation INFO
project = "TRAPUM_GC_SEARCHES"
telescope = "MeerKAT"
target = "J2140-2310B"
beam_type = "Stokes_I"
beam = "cfbf0000"
utc = "2022-06-29-20:06:23"
raw_data_dir = "/fred/oz005/search/${target}/${utc}/3/816/"
obs_header = "${raw_data_dir}/obs.header"

// Readfile parser 
  readfile_parser = "${baseDir}/readfile_parser.sh"

// Peasoup
    min_snr = "8.0"
    acc_start = "-30.0"
    acc_end = "30.0"
    ram_limit_gb = "30.0"
    nh = "4"
    ngpus = "1"
    total_cands_limit = "100000"
    fft_size = "67108864"
    dm_file = "${baseDir}/dm_file.txt"


// Filtool

    telescope = "meerkat"

// rfifind

    rfifind_time = "2.2"
    rfifind_freqsig = "3.0"
    rfifind_timesig = "10.0"
    rfifind_intfrac = "0.3"
    rfifind_chanfrac = "0.7"
    rfifind_nthreads = "4"
    

// folding 
  
    fold_script = "${baseDir}/fold_peasoup_candidates.py"
    pulsarx_fold_template = "${baseDir}/meerkat_fold.template"
    

}

profiles {
   hercules {
    includeConfig 'hercules.config'
  }
  ozstar {
    includeConfig 'ozstar.config'
  }
  nt {
    includeConfig 'nt.config'
  }
  }


